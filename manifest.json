{
  "manifest_version": 3,
  "name": "Tab Auto Reloader",
  "version": "1.0.0",
  "description": "Automatically reload selected tabs at specified intervals to keep your browser active",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Auto Reloader"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}